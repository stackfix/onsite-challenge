generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Product {
  id            String    @id @default(cuid())
  name          String
  slug          String    @unique
  logoUrl       String?
  stackfixScore Int
  features      Feature[]
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model Feature {
  id        String  @id @default(cuid())
  name      String
  status    String // 'native' | 'third_party' | 'missing'
  product   Product @relation(fields: [productId], references: [id])
  productId String
}
